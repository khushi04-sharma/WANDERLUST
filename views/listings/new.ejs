
    <% layout("/layouts/boilerplate") %>

    <div class="row">
      <br>
      <br>
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form class="needs-validation" novalidate action="/listings" method="POST">

          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            required
            />
              <div class="valid-feedback">
                Title looks good! ;)
              </div>
          </div>

          <div class="mb-3">
            <label name="desciption" class="form-label">Description</label>  
            <textarea
            class="form-control"
            id="description"
            name="listing[description]"
            required
            ></textarea>
            <div class="invalid-feedback">
                please enter description!
              </div>
          </div>


          <div class="mb-3">
            <label name="image" class="form-label">Image Link</label>
            <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="text"
            class="form-control"
          />
          </div>

          <div class="row">

            <div class="mb-3 col-md-4">
            <label name="price" class="form-label">Price</label>
            <input 
            class="form-control"
            placeholder="1240"
            name="listing[price]"
            required/>
            <div class="invalid-feedback">
                price should be valid! :/
              </div>
            </div>


            <div class="mb-3 col-md-8">
              <label name="country" class="form-label">Country</label>
              <input name="listing[country]" 
                placeholder="India" 
                type="text" 
                class="form-control"
                required/>
                <div class="invalid-feedback">
                please enter the country name :)
              </div>
            </div>
          </div>
          

          <div class="mb-3">
            <label name="location" class="form-label">Location</label>
            <input
            name="listing[location]"
            placeholder="kalyani,west bengal"
            type="text"class="form-control"
            required
            />
            <div class="valid-feedback">
                location should be valid! ')'
              </div>
          </div>

          <button class="btn btn-dark add-btn">Add</button>
          <br>
          <br>
        </form>
      </div>
    </div>